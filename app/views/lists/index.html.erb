<div class="banner">
  <h1>Save any kind of movies</h1>
  <p>build your best of</p>
</div>
<div class="display">
  <%#= cl_image_tag("xl84jsytodwngk4sinir",
      width: 400, height: 300, crop: :thumb, gravity: :face) %>
  <%#= link_to 'Create a movie list', new_list_path, class: "btn btn-success" %>
  <%= link_to new_list_path do %>
    <i class="fa-solid fa-circle-plus fa-lg"></i>
    <span>List</span>
  <% end %>
  <div class="movie-list">
    <ul>
      <% @lists.each do |list| %>
      <li class="list">
        <%= link_to list.name, list_path(list) %>
        <%= link_to list_path(list), method: :delete, data: { confirm: "Are you sure you want to remove #{list.name} list"}, class: "trash" do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
